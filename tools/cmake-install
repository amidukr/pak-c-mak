#!/bin/bash
if [ "$#" -ne 1 ]; then 
   echo "cmake-install <project>" >&2; exit 1;
fi

set -e
 
PROJECT=$1

source "$PAK_C_MAK_PATH/pak-c-mak-env"

PROJECT_DIR=$("$PAK_C_MAK_TOOLS_PATH/find-downloaded-content" packages $PROJECT)
PROJECT_BUILD_CACHE=$PAK_C_MAK_CMAKE_BUILD_PATH/$PROJECT

mkdir -p "$PROJECT_BUILD_CACHE"
cd "$PROJECT_BUILD_CACHE"

if [ -n "$PAK_C_MAK_CMAKE_GENERATOR" ]; then
    GENERATOR_KEY="-G$PAK_C_MAK_CMAKE_GENERATOR"
fi 

cmake "$GENERATOR_KEY" $PAK_C_MAK_CMAKE_ARGUMENTS -DCMAKE_INSTALL_PREFIX="$CMAKE_PREFIX_PATH" "$PROJECT_DIR" && \
cmake --build . $PAK_C_MAK_CMAKE_BUILD_ARGUMENT --target install
